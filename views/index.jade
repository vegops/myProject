extends layout

block content
  nav.nav-bar
    a.nav-item.col-xs-3(href="/") Home
      i.fa.fa-home(aria-hidden='true')
    a.nav-item.col-xs-3(href="/account") My Account
      i.fa.fa-user(aria-hidden='true')
    a.nav-item.col-xs-3(href="/about") About
      i.fa.fa-info(aria-hidden='true')
    a.nav-item.col-xs-3(href="/contact") Contact us
      i.fa.fa-phone(aria-hidden='true').
    if(user)
      a.side(href="/user/logout") Logout
  if(user)
    h1.title(style="text-align: center;") Welcome #{user.username}!
    p(style="text-align: center;") this is your own personal space!
    .welcome-img(style="text-align: center;")
      img(src="https://d3n8a8pro7vhmx.cloudfront.net/promise/pages/1972/attachments/original/1479619064/StartWithHello_logo.jpg")
  if(!user)
    h1.title Welcome Stranger!
    .welcome-img
      img(src="http://i.ebayimg.com/00/s/NTY2WDg0OA==/z/ZeoAAOSw-zxWpf59/$_32.JPG")
    #login-modal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') &times;
            |         
            h4.modal-title Login
          |       
          .modal-body
            h4 Please log in with you username and password.
            form#login-form.col-xs-6(action="/account")
              .field
                label(for="username") Username:
                input#username(type="text" name="username")
              .field
                label(for="password") Password:
                input#password(type="password" name="password")
              .field
                input#submit(type="submit" value="Login")
            .login-img.col-xs-3
              img(src="https://www.sharphealthplanpayment.com/SHARPHEALTHPLAN/images/images/login.svg")
          |       
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
    a.side(href="#" data-toggle="modal" data-target="#login-modal") Login

